<% include ../partials/header %> 

<div class="container">
    <div class="row">
        <h1>Edit <%= user.username %>'s Profile</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/user/<%= user._id %>/profile?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="email">Name</label>
                    <input class="form-control" type="text" name="usr[name]" value="<%= user.name %>" >
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input class="form-control" type="number" name="usr[age]" value="<%= user.age %>">
                </div>
                <div class="form-group">
                    <label for="height">Height</label>
                    <input class="form-control" type="number" name="usr[height]" value="<%= user.height %>" step="any">
                </div>
                <div class="form-group">
                    <label for="weight">Weight</label>
                    <input class="form-control" type="number" name="usr[weight]" value="<%= user.weight %>" step="any">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/user/<%= user._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %> 