<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Meal!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/meals/<%= meal._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="meal-type"></label>
                    <select id="meal-type" name="type">
                      <option value="breakfast">Breakfast</option>
                      <option value="lunch">Lunch</option>
                      <option value="dinner">Dinner</option>
                      <option value="snack">Snack</option>
                    </select>
                </div>
                <div class="form-group">
					<label for="title">Title</label>
                    <input class="form-control" type="text" name="meal[title]" value="<%= meal.title %>">
                </div>
                <div class="form-group">
					<label for="calories">Calories</label>
                    <input class="form-control" type="number" name="meal[calories]" value="<%= meal.calories %>">
                </div>
                <div class="form-group">
					<label for="carbs">Carbs</label>
                    <input class="form-control" type="text" name="meal[carbs]" value="<%= meal.carbs %>">
                </div>
                <div class="form-group">
					<label for="protein">Protein</label>
                    <input class="form-control" type="text" name="meal[protein]" value="<%= meal.protein %>">
                </div>
                <div class="form-group">
					<label for="fats">Fats</label>
                    <input class="form-control" type="text" name="meal[fats]" value="<%= meal.fats %>">
                </div>
                <div class="form-group">
					<label for="sugar">Sugar</label>
                    <input class="form-control" type="text" name="meal[sugar]" value="<%= meal.sugar %>">
                </div>
                <div class="form-group">
					<label for="sodium">Sodium</label>
                    <input class="form-control" type="text" name="meal[sodium]" value="<%= meal.sodium %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/user/<%= currentUser.id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

